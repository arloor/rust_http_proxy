{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/target/debug/${workspaceFolderBasename}",
            "args": [
                "-p",
                "7788",
                "-c",
                "cert.pem",
                "-k",
                "privkey.pem",
                "-u",
                "username:password",
                "-w",
                ".",
                "-o",
                "--never-ask-for-auth",
                "-r=arloor"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "rust: cargo build",
            "env": {
                "HOSTNAME": "test"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example",
            "cargo": {
                "args": [
                    "build",
                    "--example",
                    "example1"
                ],
                "filter": {
                    "name": "example1",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'socket_filter'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=socket_filter",
                    "--package=socket_filter"
                ],
                "filter": {
                    "name": "socket_filter",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'socket_filter'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=socket_filter",
                    "--package=socket_filter"
                ],
                "filter": {
                    "name": "socket_filter",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}