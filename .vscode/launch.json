{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    // https://github.com/vadimcn/codelldb/blob/v1.10.0/MANUAL.md#rust-language-support
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug rust_http_proxy",
            "program": "${workspaceFolder}/target/debug/${workspaceFolderBasename}",
            "args": [
                "-p",
                "7788",
                "-c",
                "cert.pem",
                "-k",
                "privkey.pem",
                "-u",
                "username:password",
                "-w",
                ".",
                "-o",
                "--never-ask-for-auth",
                "-r=arloor"
            ],
            "cwd": "${workspaceFolder}",
            "terminal": "integrated",
            "preLaunchTask": "rust: cargo build",
            "env": {
                "HOSTNAME": "test"
            },
            "sourceLanguages": ["rust"]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example1",
            "cargo": {
                "args": [
                    "build",
                    "--example=example1",
                    "--package=bpf_socket_filter"
                ],
                "filter": {
                    "name": "example1",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"],
            "terminal": "console",
        }
    ]
}